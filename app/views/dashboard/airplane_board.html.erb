<!-- dashborad start -->
<div class="dashborad">
    <div class="container">
        <div class="holder">
            <div class="row">
                <%= render partial: "shared/sidebar_airline"%>
                <div class="col-md-9 col-sm-8">
                <div class="heading_area text-center dashboard-heading">
                      <h3>Posted Quotes History</h3>
                  </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-borderless">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Origin</th>
                                    <th>Destination</th>
                                    <th>Date Requested</th>
                                    <th>Size</th>
                                    <th>Weight</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @airplane_data.each do |data| %>
                                    <tr>
                                        <td><%= data.created_at.strftime("%B %d %Y")%></td>
                                        <td><%= data.from_airpot%></td>
                                        <td><%= data.to_airpot%></td>
                                        <td><%= data.date_required.strftime("%B %d %Y") if data.date_required.present?%></td>
                                        <td>L<%= data.cargo_dimension_length%> W <%= data.cargo_dimension_width%> H <%= data.cargo_dimension_height%> </td>
                                        <td><%= data.weight%></td>
                                        <td><%= link_to "Bid here", airline_quote_path(data), class: "btn btn-success"%></td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
  $(".dateSearch").datetimepicker();
</script>