<div class="login_modal forget-popup">
<div id="forget_password" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
       <div class="modal-body">
        <div class="login_area row">
          <div class="header text-center ">
          <h3>Password Reset Request</h3>
        </div>
        <%= form_for(:user, url: password_path(user), html: { method: :post },:remote=> true) do |f| %>
          <div class="col-xs-12 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2" >
            <div class="form-group">
              <label>Enter your email address, we will send a password reset link email to your email address.</label>
              <div class="left-inner-addon">
                  <i class="fa fa-user"></i>
    			<%= f.email_field :email, autofocus: true ,:class=>"form-control",:placeholder=>"Your Email" %>
              </div>
            </div>
            <div class="text-center btn_area">
            <%= f.submit "Send me reset password instructions",:class=>"btn btn-default" %>
            </div>
          </div>
        <%end%>
        <p class="b_bottom">
        <a href="#" onclick="show_box('login')" data-toggle="modal" data-target="#login_form">Back to login</a><br />
        </p>
      </div>
      </div>
    </div>
  </div>
</div>
</div>
