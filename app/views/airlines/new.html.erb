<div class="login_modal">
	<div id="login_form" >
	  <div class="modal-content">
	    <div class="modal-body">
		    <div class="create_area">
		      <div class="header text-center">
		        <h2>Create your account now</h2>
		        <p>it takes less-than-a-minute.</p>
		      </div>
		      <%= form_for(@airline,:html => {:class => "form-horizontal",:id=> "new_airline"}) do |ff| %>
		        <div class="row">
		        	<%= ff.fields_for :users do |f| %>
			          <div class="col-md-6">
			            <div class="form-group">
			                <div class="left-inner-addon">
		                    <i class="fa fa-envelope"></i>
		                    <%= f.text_field :email, :pattern=> "[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$",class: "form-control",:required=> true,:placeholder=> "Company Email" %>
			                </div>
			            </div>
			          </div>
			          <div class="col-md-6">
			            <div class="form-group">
			                <div class="left-inner-addon">
		                    <i class="fa fa-asterisk"></i>
		                    <%= f.text_field :password, autofocus: true, autocomplete: "off",class: "form-control",:required=> true,:placeholder=> "Password",:type=>"password" %>
			                </div>
			            </div>
			          </div>
			        <%end%>
			        <div class="clearfix"></div>
		          <div class="col-md-6">
		            <div class="form-group">
		                <div class="left-inner-addon">
		                    <i class="fa fa-user"></i>
		                    <%= ff.text_field :airline_name, class: "form-control", placeholder: "AirLine name" %>
		                </div>
		            </div>
		          </div>
		          <div class="col-md-6">
		            <div class="form-group">
		                <div class="left-inner-addon">
		                    <i class="fa fa-envelope"></i>
		                    <%= ff.text_field :airline_address, class: "form-control", placeholder: "AirLine address" %>
		                </div>
		            </div>
		          </div>
		          <div class="clearfix"></div>
		          <div class="col-md-6">
		            <div class="form-group select_box">
		            <div class="input-group">
		                <div class="input-group-addon"><i class="fa fa-bars"></i></div> 
	                  <%= country_select("airline", "country", { include_blank: 'Select a country' },class: "form-control" ) %>
		              </div>
		            </div>
		          </div>
		          <div class="col-md-6">
		            <div class="form-group">
		            <div class="left-inner-addon">
		                <i class="fa fa-asterisk"></i>
		               <%= ff.text_field :contact_person_name , class: "form-control", placeholder: "Contact Person Name"%>
		            </div>
		          </div>
		          </div>
		          <div class="clearfix"></div>
		          <div class="col-md-6">
		            <div class="form-group">
		            <div class="left-inner-addon">
		                <i class="fa fa-asterisk"></i>
		                <%= ff.text_field :contact_person_address , class: "form-control",placeholder: "Contact Person Address" %>
		            </div>
		          </div>
		          </div>
		          <div class="col-md-6">
		            <div class="form-group">
		            <div class="left-inner-addon">
		                <i class="fa fa-asterisk"></i>
		                <%= ff.text_field :contact_person_email,:pattern=> "[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$", class: "form-control",placeholder: "Contact Person Email" %>
		            </div>
		          </div>
		          </div>
		          <div class="clearfix"></div>
		          <div class="col-md-6">
		            <div class="form-group">
		            <div class="left-inner-addon">
		                <i class="fa fa-asterisk"></i>
		                <%= ff.text_field :contact_number,class: "form-control" ,placeholder: "Contact Number"%>
		            </div>
		          </div>
		          </div>
<!-- 		          <div class="col-md-6">
		            <div class="form-group">
		              <div class="input-group">
		                <div class="input-group-addon">Code</div> 
		                <input type="text" class="form-control" id="exampleInputAmount" placeholder="Phone No"></div>
		            </div>
		          </div> -->
		          <div class="col-md-6">
		            <div class="form-group">
		                <div class="left-inner-addon">
		                    <i class="fa fa-envelope"></i>
		                    <%= ff.text_field :year_in_service, class: "form-control" ,placeholder: "Year in service" %>
		                </div>
		            </div>
		          </div>
		          <div class="clearfix"></div>
		          <div class="col-md-6">
		            <div class="form-group">
		            	<div class="input-group">
		                <div class="input-group-addon"><i class="fa fa-bars"></i></div> 
		                <%= ff.text_field :iata_code, class: "form-control",placeholder:  "IATA Code" %>
		              </div>
		            </div>
		          </div>
		          <div class="col-md-6">
		            <div class="form-group">
		            <div class="left-inner-addon">
		                <i class="fa fa-asterisk"></i>
		                <%= ff.text_field :caa_license, class: "form-control" ,placeholder: "CAA Licence"%>
		            </div>
		          </div>
		          </div>
		          <div class="clearfix"></div>
	            <div class="text_area">
	              <label>How did you hear about Cargo Exchange? </label>
	              <%= ff.text_area :airline_info, class: "form-control" ,rows: "6"%>
	            </div>
	            <div class="text-center btn_area">
	              <p><div class="checkbox"> <label> <input type="checkbox" value="1" name="terms" id="terms" checked="checked" /> Accept all term & condition</label> </div></p>
	              <%= ff.submit 'REGISTER', class: "btn btn-default" %>
	            </div>
		        </div>
		      <%end%>
		    </div>
	    </div>
	  </div>
	</div>
</div>
<script type="text/javascript">

 jQuery.validator.addMethod("lettersonly", function(value, element) {
    return this.optional(element) || /^[a-zA-Z\s]+$/i.test(value);
  }, "Letters only please"); 

  $.validator.addMethod("lettersNumbersOnly", function(value, element) {
    return this.optional(element) || /^[a-z0-9\-\s]+$/i.test(value);
  }, "Username must contain only letters, numbers, or dashes.");

  $("#new_airline").validate({
     rules: {
      "airline[airline_name]": { lettersonly: true},
      "airline[airline_address]" : {lettersNumbersOnly: true},
      "airline[users][email]" : {email: true},
      "airline[contact_person_email]":{email: true},
      "airline[contact_person_address]" : {lettersNumbersOnly :true},
      "airline[contact_number]" : {digits :true},
      "airline[year_in_service]" : {digits :true}
    }
    });

</script>